<div class="sidebar" role="aside" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
		<header class="header">
			{{#if @blog.logo}}
			<a href="/">
				<img id="blog" class="logo" src="{{@blog.logo}}">
			</a>
			{{else}}
			<h1 class="title"><a href="/">{{@blog.title}}</a></h1>
			{{/if}}

			<div class="separator"></div>

			<p class="description">{{{@blog.description}}}</p>
			<div class="social-icons">
        <a href="https://www.facebook.com/stealthtrading" class="icon icon-facebook"></a>
				<a href="https://twitter.com/stealthalytics" class="icon icon-twitter"></a>
				<a href="/rss" class="icon-rss"></a>
				<a href="mailto:support@stealthtrader.com" class="icon-mail"></a>
			</div>
		</header>
	</div>